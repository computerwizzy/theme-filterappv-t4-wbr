<div class="news_letter">
    <div class="container">
        <div class="row">
            <div class="col-11 m-auto shadow" style="background-color: {{ section.settings.background_color }};">
                <div class="row px-2 py-4 align-items-center">
                    <div class="col-12 col-lg-6 col-xl-6 col-md-6 mb-xl-0 mb-lg-0 mb-md-0 mb-3 text-xl-left text-lg-left text-md-left  text-center">
                        {% if  section.settings.section_title != blank %}
                            <h5 class="mb-0" style="color: {{ section.settings.text_color }};">{{section.settings.section_title}}</h5>
                        {% endif %}
                        {% if  section.settings.section_title != subtitle %}    
                        <p class="mb-0" style="color: {{ section.settings.text_color }};">
                            {{section.settings.subtitle}}
                        </p>
                        {% endif %}
                    </div>
                    <div class="col-12 col-lg-6 col-xl-6 col-md-6">
                        {% form 'customer' %}
                            {{ form.errors | default_errors }}
                            {% if form.posted_successfully? %}
                                <p class="text-center">{{ 'general.newsletter_form.confirmation' | t }}</p>
                            {% else %}
                                <div class="col-12">
                                    <div class="input-group">
                                    <input type="hidden" name="contact[tags]" value="newsletter">
                                        <input type="email" class="form-control" placeholder="Email-Address" 
                                            aria-label="Recipient's username" aria-describedby="button-addon2" />
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary" type="button" id="button-addon2">
                                                Submit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                       {% endform %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% schema %}
   {
     "name": "Newsletter Signup Banner",
     "tag": "section",
     "class": "newsletter-signup-banner-section",
     "settings": [
       {
         "type": "text",
         "id": "section_title",
         "label": "Title",
         "default": "Stay In The Know"
       },
       {
         "type": "richtext",
         "id": "subtitle",
         "label": "Subtitle",
         "default": "<p>Sign up for our newsletter to get the latest deals and updates.</p>"
       },
       {
         "type": "color",
         "id": "background_color",
         "label": "Background Color",
         "default": "#FFA500"
       },
       {
         "type": "color",
         "id": "text_color",
         "label": "Text Color",
         "default": "#FFFFFF"
       }
     ],
     "presets": [
       {
         "name": "Newsletter Signup Banner"
       }
     ]
   }
   {% endschema %}
