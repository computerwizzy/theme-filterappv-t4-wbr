<section class="track-order">
    <div class="container pt-5 pb-3">
        {% if section.settings.section_title != blank %}
            <div cla="row">
            <div class="col-12 text-center my-2"><h3 class="text-uppercase">{{section.settings.section_title}}</h3></div>
            </div>
        {% endif %}
        <form action="#" method="post">
            <div class="row">
                <div class="col-md-8 m-auto">
                    <div class="row my-4">
                        <div class="col-12 py-2">
                            {% if section.settings.description != blank %}
                                <p>{{section.settings.description}}</p>
                            {% endif %}
                        </div>
                        <div class="col-xl-8 col-lg-8 col-md-10 col-12 py-2 m-auto">
                                        <div class="form-group">
                                            {% comment %} <label>Order Id</label> {% endcomment %}
                                            <input type="text" class="form-control m-auto" id="order_id" placeholder="Order Id"  required>
                                        </div>
                                        <div class="form-group">
                                            {% comment %} <label>Email</label> {% endcomment %}
                                            <input type="email" class="form-control m-auto" id="email"  placeholder="Email you used during checkout." required>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn button-all m-auto" value="Track Order">
                                        </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </form>
    </div>
</section>
{% schema %}
  {
    "name": "Track order",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Heading",
        "default": "Track Order"
      },
      {
        "type": "textarea",
        "id":"description",
        "label":"description"
      }
    ]
  }
{% endschema %}