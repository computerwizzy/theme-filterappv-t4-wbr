{% comment %} <a href="/" class="navbar-brand mr-7 d-none d-md-block" name="{{ shop.name | escape }}"
    title="{{ shop.name | escape }}" aria-label="{{ shop.name | escape }}">
    {% if settings.main_svg_logo != blank %}
    <img src="{{ settings.main_svg_logo }}" class="img-fluid" alt="{{ shop.name | escape }}"
        style="width: {{ logo_width }}px" />
    {% elsif logo contains 'no-image' %}
    <span class="h5 text-primary"><i class="icon ion-pound text-primary"></i> {{ shop.name | escape }}</span>
    {% else %}
    <img src="{{ logo }}" alt="{{ shop.name | escape }}" class="img-fluid" style="width: {{ logo_width }}px">
    {% endif %}
</a> {% endcomment %}

<style>
/* Fix dropdown menu visibility issues - minimal styling */
.submenu_ul {
    position: absolute !important;
    z-index: 999999 !important;
    display: none !important;
    top: 100% !important;
    left: 0 !important;
}

.ul-menu li:hover > .submenu_ul {
    display: block !important;
    z-index: 999999 !important;
}

.megamenu {
    position: absolute !important;
    z-index: 999999 !important;
    display: none !important;
    width: 100% !important;
    left: 0 !important;
    top: 100% !important;
}

.megamenu_li:hover > .megamenu {
    display: block !important;
    z-index: 999999 !important;
}

/* Ensure parent li has position relative */
.ul-menu li {
    position: relative !important;
}

/* Fix for sticky header interference */
.site-header.is-sticky .submenu_ul,
.site-header.is-sticky .megamenu {
    position: fixed !important;
    z-index: 999999 !important;
}
</style>

