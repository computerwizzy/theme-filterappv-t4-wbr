{% if section.settings.enable_section %}
    <section class="who-we-are">
        <div class="container">
            <div class="col-xl-10  col-lg-12 col-md-10 m-auto">
            <div class="row">
                <div class="col-lg-6 mb-lg-0 mb-5">
                    <div class="who-content_div">
                        <div class="title_div">
                            <p class="tag_line">{{ section.settings.tag_line }}</p>
                            <h3>{{ section.settings.title }}</h3>
                        </div>
                        <p>{{ section.settings.section_content }}</p>
                        <a class="btn_body" href="{{ section.settings.btn_url }}">{{ section.settings.btn_txt }}</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="img_div_who">
                        <img src="{{ section.settings.choose_img | img_url: 'original' }}" alt="">
                    </div>
                </div>
            </div>
            </div>
        </div>
    </section>
{% endif %}
{% schema %}
  {
    "name": "Who We Are",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable_section",
            "label": "Enable Section?"
        },
        {
            "type": "image_picker",
            "id": "choose_img",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "tag_line",
            "label": "Tag Line"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "textarea",
            "id": "section_content",
            "label": "Section Content"
        },
        {
            "type": "text",
            "id": "btn_txt",
            "label": "Button Text"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "Button url"
        }
        
    ],
    "presets": [
      {
        "name": "Who We Are",
        "category": "Index"
      }
    ]
  }
{% endschema %}